{
    "rules": {
        "semi": [2, "never"]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "hljs": "readonly",
        "loadlive2d": "readonly",
        "EmojiButton": true,
        "APlayer": true,
        "roughViz": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    }
}
